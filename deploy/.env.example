# ===========================================
# MenuCraft Production Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database
DB_PASSWORD=your-secure-password-here

# Authentication (Better-Auth)
AUTH_SECRET=generate-a-secure-random-32-char-string
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# File Storage (Cloudflare R2)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=menucraft-uploads
R2_PUBLIC_URL=https://your-r2-public-url.com

# Translation (DeepL)
DEEPL_API_KEY=your-deepl-key

# Email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM=MenuCraft <notifications@yourdomain.com>

# AI (Anthropic)
ANTHROPIC_API_KEY=sk-ant-...

# Security
JWT_SECRET=generate-a-secure-random-string

# URLs (auto-generated from DOMAIN, but can override)
VITE_API_URL=https://api.yourdomain.com
API_URL=https://api.yourdomain.com
WEB_URL=https://app.yourdomain.com
PUBLIC_URL=https://menu.yourdomain.com
