# ===========================================
# MenuCraft Production Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database
POSTGRES_USER=menucraft
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=menucraft

# Authentication (Clerk)
CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...
CLERK_WEBHOOK_SECRET=whsec_...

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# File Storage (Cloudflare R2)
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=menucraft-uploads
R2_PUBLIC_URL=https://your-r2-public-url.com

# Translation (DeepL)
DEEPL_API_KEY=your-deepl-key

# Email (Resend)
RESEND_API_KEY=re_...
EMAIL_FROM=MenuCraft <notifications@yourdomain.com>

# AI (Anthropic)
ANTHROPIC_API_KEY=sk-ant-...

# URLs (replace with your domains)
API_URL=https://api.yourdomain.com
WEB_URL=https://app.yourdomain.com
PUBLIC_URL=https://menu.yourdomain.com
