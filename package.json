{
  "name": "menucraft",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "scripts/setup.sh",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:setup": "scripts/db-setup.sh",
    "db:studio": "pnpm --filter @menucraft/database db:studio",
    "clean": "turbo clean && rm -rf node_modules",
    "docker:build": "docker compose -f docker-compose.prod.yml build",
    "docker:up": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose -f docker-compose.prod.yml down",
    "docker:restart": "pnpm docker:down && pnpm docker:up",
    "docker:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:logs:api": "docker compose -f docker-compose.prod.yml logs -f api",
    "docker:logs:web": "docker compose -f docker-compose.prod.yml logs -f web",
    "docker:ps": "docker compose -f docker-compose.prod.yml ps",
    "docker:exec:api": "docker compose -f docker-compose.prod.yml exec api sh",
    "docker:exec:db": "docker compose -f docker-compose.prod.yml exec postgres psql -U menucraft",
    "backup:db": "docker compose -f docker-compose.prod.yml exec postgres pg_dump -U menucraft menucraft > backup_$(date +%Y%m%d_%H%M%S).sql",
    "deploy": "pnpm build && pnpm docker:build && pnpm docker:up",
    "deploy:db": "docker compose -f docker-compose.prod.yml exec api pnpm db:push",
    "deploy:migrate": "pnpm deploy:db",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "health:full": "curl -f http://localhost:3000/ready || exit 1",
    "start:prod": "pnpm build && pnpm docker:up && pnpm deploy:db"
  },
  "devDependencies": {
    "@menucraft/config-eslint": "workspace:*",
    "@menucraft/config-typescript": "workspace:*",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.37.0"
    }
  }
}
