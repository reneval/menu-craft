{
  "name": "menucraft",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "scripts/setup.sh",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:setup": "scripts/db-setup.sh",
    "db:studio": "pnpm --filter @menucraft/database db:studio",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@menucraft/config-eslint": "workspace:*",
    "@menucraft/config-typescript": "workspace:*",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.14.4",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "0.37.0"
    }
  }
}
